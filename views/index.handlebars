<div class="container">
  <div class="row">
    <div class="col-sm">
      <img src="bg.jpg" alt="pic of burger" width="200" height="300" class="center">
      <h3>Eat-Da-Burger!</h3>
      <div class="row">
        <div class="col-sm-6">
          <ol>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burgers-block devoure=true}}
          {{/unless}}
          {{/each}}
          </ol>

        </div>
        <div class="col-sm-6">


          <ol>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burgers-block devoure=false}}
            {{/if}}
            {{/each}}
          </ol>

        </div>

      </div>

      <ul>



        <form class="create-form">
          <div class="form-group">
            

            <input type="text" class="form-control " id="ca">
            

          </div>
          <div class="text-center"> <button type="submit" class="btn btn-primary" name="devoured"
              value="0">Submit</button>
            <h6>Enter a burger you want to eat Click the "submit" button</h6>
          </div>


        </form>

    </div>
  </div>


</div>
